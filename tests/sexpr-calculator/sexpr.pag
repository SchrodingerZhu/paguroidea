lexer {
    definition DIGIT     = '0' .. '9';

    token LPAREN     = '(';
    token RPAREN     = ')';
    token PLUS     = '+' | '加';
    token MULT     = '*' | '乘';
    token INT       = DIGIT+;

    skip = (' ' | '\t' | '\n' | '\r')+;
}

parser sexpr {
    active compound
        = LPAREN ~ op ~ (compound | int)* ~ RPAREN;

    active op
        = PLUS | MULT;

    active int
        = INT;

    active sexpr
        = compound | int;
}
