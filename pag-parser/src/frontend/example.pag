lexer {
    // definition in lexer is not a real token, it is just a way to define a set of characters

    COMMENT = "/*" ~ !('\x00'..'\xff'* ~ "*/" ~ ('\x00'..'\xff')*) ~ "*/";
}

// parser must have a entry point
parser test {
    // definition in parser can be a real grammer rule.

    active test = COMMENT;
}
